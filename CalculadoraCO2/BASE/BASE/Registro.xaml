<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BASE.Registro"
             BackgroundColor="Black">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackLayout Grid.Row="0"
                     VerticalOptions="CenterAndExpand"
                     Margin="40">

            <Label Text="Formulario de Registro"
                   TextColor="#FFFFFF"
                   FontSize="30"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,-30,0,10" />

            <Image Source="camararegistro.png"
                   HeightRequest="55"
                   Margin="0,0,0,20" />

            <Frame CornerRadius="10" 
                   Padding="-5" 
                   BackgroundColor="#6ECCAF"
                   Margin="0,0,0,15">
                
                <Entry Placeholder="Cédula"
                   TextColor="Black"
                   PlaceholderColor="Black"
                   Margin="10,0,10,10"
                   x:Name="idUser"/>
            </Frame>

            <Frame CornerRadius="10" 
                   Padding="-5"
                   BackgroundColor="#6ECCAF"
                   Margin="0,0,0,15">
                
                <Entry Placeholder="Nombre Completo" 
                   TextColor="Black"
                   PlaceholderColor="Black"
                   Margin="10,0,10,10"
                   x:Name="fullName"/>
            </Frame>

            <Frame CornerRadius="10"
                   Padding="-5"
                   BackgroundColor="#6ECCAF"
                   Margin="0,0,0,15">

                <Entry Placeholder="Domicilio" 
                   TextColor="Black"
                   PlaceholderColor="Black"
                   Margin="10,0,10,10"
                   x:Name="address"/>
            </Frame>

        
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Label Text="Fecha de Nac."
                   TextColor="White"
                   FontSize="18"
                   Margin="5,10,0,0"
                   HorizontalTextAlignment="Start"
                   Grid.Column="0"/>

                <DatePicker x:Name="BirthdatePicker"
                            Date="{Binding Birthdate}"
                            HorizontalOptions="Start"
                            TextColor="#00FF7B"
                            Grid.Column="1" 
                            Margin="0,0,0,-10"/>

            </Grid>

            <Frame CornerRadius="10"
                   Padding="-5"
                   BackgroundColor="#6ECCAF"
                   Margin="0,15,0,15">
                
                <Entry Placeholder="Usuario" 
                   TextColor="Black"
                   PlaceholderColor="Black"
                   Margin="10,0,10,10"
                   x:Name="user"/>
            </Frame>

            <Frame CornerRadius="10"
                   Padding="-5"
                   BackgroundColor="#6ECCAF"
                   Margin="0,0,0,15">    
                
                <Entry Placeholder="Contraseña" 
                   TextColor="Black"
                   PlaceholderColor="Black"
                   Margin="10,0,10,10"
                   x:Name="password" IsPassword="True"/>
            </Frame>


            <Frame CornerRadius="10"
                   Padding="-5"
                   BackgroundColor="#6ECCAF"
                   Margin="0,0,0,40">

                <Entry Placeholder="Correo" 
                   TextColor="Black"
                   PlaceholderColor="Black"
                   Margin="10,0,10,10"
                   x:Name="email"/>
            </Frame>
            
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <CheckBox Color="#00FF7B"
                          Grid.Column="0" 
                          x:Name="checkboxTerm"
                          IsChecked="false"/>

                <Label Text="Acepto los términos y condiciones de uso."
                       TextColor="White"
                       FontSize="17"
                       Grid.Column="1" 
                       Margin="0,3,0,0"
                       x:Name="lblTerms"/>

            </Grid>

            <Button Text="Registrarse"
                    TextColor="Black"
                    BackgroundColor="#00FF7B"
                    CornerRadius="37"
                    Margin="0,20,0,0"
                    x:Name="btnRegistar" IsEnabled="false"/>
            
        </StackLayout>

    </Grid>

</ContentPage>